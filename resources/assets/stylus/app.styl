@import '~vuetify/src/stylus/main'
@require '~vuetify/src/stylus/settings/_colors'

a
  cursor: pointer
  text-decoration: none
  
  &:hover
    text-decoration: underline

.invalid-feedback
  color: $red.accent-2
  margin-top: -20px

.navigation-drawer
  position: absolute
  left: 0
  
.card
  .snack__content
    max-width: 100vw
    min-width: 100vw

::-webkit-scrollbar
    width 7px
    height 7px

::-webkit-scrollbar-button
    width 0px
    height 0px

::-webkit-scrollbar-thumb
    background #9d9d9d
    border 0px solid #1c171b
    border-radius 0px
    &:hover
        background #9d9d9d
    &:active
        background #000000

::-webkit-scrollbar-track
    background #666666
    border 0px none #000000
    border-radius 0px
    &:hover
        background #666666
    &:active
        background #333333

::-webkit-scrollbar-corner
    background transparent